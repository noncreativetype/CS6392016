<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fabian.imageviewer.MainActivity"
    android:background="#746e6e">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ARt Brut Album Art"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse" />

    <SurfaceView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/surfaceView"
        android:background="@mipmap/pic1"
        android:clickable="true"
        android:focusable="true"
        android:scrollIndicators="top"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/surfaceView2"
        android:layout_alignStart="@+id/surfaceView2" />

    <SurfaceView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/surfaceView2"
        android:background="@mipmap/pic2"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SurfaceView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/surfaceView3"
        android:background="@mipmap/pic4"
        android:padding="0dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <SurfaceView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/surfaceView4"
        android:background="@mipmap/pic3"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:layout_alignBottom="@+id/surfaceView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <SurfaceView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/surfaceView5"
        android:background="@mipmap/pic5"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:layout_alignTop="@+id/surfaceView"
        android:layout_alignRight="@+id/surfaceView4"
        android:layout_alignEnd="@+id/surfaceView4" />

</RelativeLayout>
